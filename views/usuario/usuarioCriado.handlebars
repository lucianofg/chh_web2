{{#if usuario}}
    <h1>Usuário "{{usuario}}" criado com sucesso!</h1>
{{else}}
    <h1></h1>
    <div class="container-sm">
        <div class="alert alert-danger" role="alert">
            <h3>Erro na criação de usuário</h3>
            {{#if error}}
                <pre>{{error}}</pre>
            {{/if}}
        </div>
    </div>
{{/if}}
<a href='/usuario/create'><button class="btn btn-primary btn-lg">Voltar a página de cadastro</button></a>
<br>
<a href='/'><button class="btn btn-secondary">Voltar a página inicial</button></a>
