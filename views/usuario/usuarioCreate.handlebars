<div class="col-md-4 col-md-offset-4">
    <form action="/usuario/create" method="post">
        <input type="hidden" name="id" value="{{usuario.id}}">

        <div class="form-group">
            <label for="inome">Nome</label>
            <input 
                type="text" 
                class="form-control" 
                id="inome" 
                name="nome" 
                placeholder="O seu nome...">
        </div>

        <div class="form-group">
            <label for="isobrenome">Sobrenome</label>
            <input type="text" 
                class="form-control" 
                id="isobrenome" 
                name="sobrenome" 
                placeholder="O seu sobrenome...">
        </div>

        <div class="form-group">
            <label for="iemail">Email</label>
            <input type="email" 
                class="form-control" 
                id="iemail" 
                name="email" 
                placeholder="O seu email">
        </div>

        <div class="form-group">
            <label for="isenha">Senha</label>
            <input type="password" 
                class="form-control" 
                id="isenha" 
                name="senha" 
                placeholder="A sua senha...">
        </div>

        <div class="form-group">
            <label for="irepsenha">Repita a sua senha</label>
            <input type="password" 
                class="form-control" 
                id="irepsenha" 
                name="repsenha" 
                placeholder="Repita a sua senha...">        
        </div>

        <div class="form-group">
            <input type="checkbox" 
                class="form-check-input" 
                id="iecol" 
                checked
                name="eColaborador">
            <label class="form-check-label" for="iecol">Sou funcion√°rio</label>
        </div>

        <span id='irepsenha_mensagem'></span> 

        <input id="icadastrar" class="btn btn-success" type="submit" value="Cadastrar">
    </form>
</div>
<script src="/js/index.js"></script>
