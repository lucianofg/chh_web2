<div class="col-md-4 col-md-offset-4">
    <form action="/usuario/edit" method="post">

        <div class="form-group">
            <label for="inome">Nome</label>
            <input type="text" 
                class="form-control" 
                id="inome" 
                name="nome" 
                value={{usuario.nome}}>
        </div>

        <div class="form-group">
            <label for="isobrenome">Sobrenome</label>
            <input type="text" 
                class="form-control" 
                id="isobrenome" 
                name="sobrenome" 
                value={{usuario.sobrenome}}>
        </div>

        <div class="form-group">
            <label for="iemail">Email</label>
            <input type="email" 
                class="form-control" 
                id="iemail" 
                name="email" 
                value={{usuario.email}}>
        </div>

        <div class="form-group">
            <label for="isenha">Senha</label>
            <input type="password" 
                class="form-control" 
                id="isenha" 
                name="senha" 
                value={{usuario.senha}}>
        </div>

