{{#if  usuario.eAdmin}}
    <h2>Lista de todos os usuários</h2>
    {{#unless listaUsuarios}}
        <h1>Lista vazia</h1>
    {{/unless}}
    <table  class="table table-striped">
    <thead  class="bg-primary">
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">É colaborador</th>
            <th scope="col">É administrador</th>
            <th scope="col">Editar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        {{#each listaUsuarios as | user |}}
        <tr>
            <th scope="row">{{user.email}}</th>
            <td>{{user.nome}}</td>
            <td>{{user.sobrenome}}</td>
            <td>
                {{#if user.eColaborador}}
                    <input type="checkbox" disabled="true" checked>
                {{else}}
                    <input type="checkbox" disabled="true">
                {{/if}}
            </td>
            <td>
                {{#if user.eAdmin}}
                    <input type="checkbox" disabled="true" checked>
                {{else}}
                    <input type="checkbox" disabled="true">
                {{/if}}
            </td>
    
            <td>
                <a href="/usuario/{{user.id}}/edit"> 
                    <button class="btn btn-primary">Editar</button> 
                </a>
            </td>
            <td>
                <a href="/usuario/{{user.id}}/delete"> 
                    <button class="btn btn-danger">Deletar</button> 
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
{{else}}
    <div class="container-sm">
        <div class="alert alert-danger" role="alert">
            <h3>Acesso não autorizado</h3>
            {{#if error}}
                <pre>{{error}}</pre>
            {{/if}}
        </div>
    </div>
{{/if}}
<script src="/js/index.js"></script>
