{{#if concurso}}
<div class="container-sm">
    <h1>{{concurso.nome}}</h1>
    <div class="accordion" id="accConcurso">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headDescConc">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Descrição
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show"
            aria-labelledby="headDescConc" data-bs-parent="#accConcurso">
          <div class="accordion-body">
              {{concurso.descricao}}
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="headPremio">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Prêmio
          </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse"
            aria-labelledby="headPremio" data-bs-parent="#accConcurso">
          <div class="accordion-body">
              {{concurso.premio}}
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="headPrazo">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            Prazos
          </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse"
            aria-labelledby="headPrazo" data-bs-parent="#accConcurso">
          <div class="accordion-body">
              <div class="form-group">
                  <label for="iprazo">Prazo de envio de itens:</label>
                  <input type="date" 
                        value="{{concurso.prazoEnvioItem}}"
                        id:"iprazo"
                        disabled>
              </div>
    
              <div class="form-group">
                  <label iresultado>Data divulgação de resultados</label>
                  <input type="date" 
                        value="{{concurso.dataDivulgacaoResultado}}"
                        id:"iresultado"
                        disabled>
              </div>
          </div>
        </div>
      </div>
    </div>
</div>
{{else}}

{{/if}}
