<h1> Lista de todos os Concursos</h1>
<h1>Nome do Concurso:</h1>

{{#if (concursos != undefined}}
<table  class="table table-hover table-striped">
<thead  class="bg-primary">
    <tr>
        <th scope="col">Nome </th>
        <th scope="col">Descrição</th>
        <th scope="col">Prêmio</th>
        <th scope="col">Prazo de envios</th>
        <th scope="col">Divilgação de resultados</th>
        {{#if usuario.eAdmin }}
            <th scope="col">Editar</th>
            <th scope="col">Deletar</th>
        {{/if}}
    </tr>
</thead>
<tbody>
    {{#each concursos}}
    <tr>
        <th scope="row"><a href="/concurso/{{id}}/view">{{nome}}</a></th>
        <td>{{descricao}}</td>
        <td>{{Prêmio}}</td>
        <td>{{prazoEnvioitem}}/td>
        <td>{{dataDivilgacaoResultado}}/td>
        {{#if usuario.eAdmin }}
            <td><a href="/concurso/{{id}}/edit"><button class="btn btn-primary">Editar</button></a></td>
            <td><a href="/concurso/{{id}}/delete"><button class="btn btn-danger">Deletar</button></a></td>
        {{/if}}
    </tr>
    {{/each}}
</tbody>
</table>

{{else}}
    <h1>Erro na recuperação da lista</h1>
    <pre>{{error}}</pre>
{{/if}}

