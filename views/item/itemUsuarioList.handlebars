{{#if usuario.id}}
    <h1>Seus itens enviados</h1>
    {{#if itens}}
        <table  class="table table-hover table-striped">
        <thead  class="bg-primary">
            <tr>
                <th scope="col">Nome </th>
                <th scope="col">Concurso</th>
                <th scope="col">Item</th>
                <th scope="col">Editar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            {{#each itens as | i |}}
            <tr>
                <th scope="row">{{i.nome}}</th>
                <td>
                    <a href=/concurso/{{i.concurso_id}}/view>
                        {{i.nome_concurso}}
                    </a>
                </td>
                <td><a href={{link_item}}>Ver item</a></td>
                <td>
                    <a href="/item/{{i.id}}/edit"> 
                        <button class="btn btn-primary">Editar</button> 
                    </a>
                </td>
                <td>
                    <a href="/item/{{i.id}}/delete"> 
                        <button class="btn btn-danger">Excluir</button> 
                    </a>
                </tr>
            {{/each}}
        </tbody>
        </table>
    {{else}}
        <h2>Você não está participando de nenhum concurso</h2>
    {{/if}}
{{else}}
    <div class="container-sm">
        <div class="alert alert-danger" role="alert">
            <h3>Faça o login para acessar os seus itens</h3>
        </div>
    </div>
{{/if}}

